<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.uit.party.ui.main.cart_detail.CartDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhile"
            android:orientation="vertical"
            android:visibility="@{viewModel.mShowCart ? View.VISIBLE : View.GONE}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_date_party"
                android:layout_marginTop="@dimen/_5sdp"
                tools:listitem="@layout/item_cart_detail"/>

            <LinearLayout
                android:id="@+id/ll_date_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_table"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/date_party"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_date_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:editable="false"
                    android:focusable="false"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:gravity="center"
                    android:inputType="datetime"
                    android:onClick="@{(view) -> viewModel.onDatePartyClicked(view)}"
                    android:text="@{viewModel.mDatePartyField}"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    tools:ignore="Deprecated"
                    tools:text="22/11/2022" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_total"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/number_of_table"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:text="@{viewModel.mNumberTableField}"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    app:addTextChangedListener="@{viewModel.getNumberTableTextChanged()}"
                    tools:text="5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_order_now"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/total"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/museo_sans_cyrl"
                    android:padding="@dimen/_5sdp"
                    android:text="@{viewModel.mTotalPrice}"
                    android:textColor="@color/colorBlue_78"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    tools:text="1.500.000Ä" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_order_now"
                style="@style/MaterialButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="@{(view) -> viewModel.onOrderNowClicked(view)}"
                android:text="@string/order_now"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.mShowCart ? View.GONE : View.VISIBLE}"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empty_cart" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.mShowLoading ? View.VISIBLE : View.GONE}"
            android:elevation="@dimen/_2sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading" />
    </RelativeLayout>
</layout>
