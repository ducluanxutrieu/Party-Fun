<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.uit.party.ui.profile.change_password.ChangePasswordViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_sign_in_background"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_3sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <View
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="#2fa881" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:text="@string/change_password"
                        android:textColor="#FFCC00"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold|italic" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout"
                    android:textColorHint="#c5c5c5"
                    bind:textError="@{viewModel.errorCurrentPassword}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_current_password"
                        style="@style/TextInputLayout.TextInputEditText"
                        android:hint="@string/action_current_password"
                        app:addTextChangedListener="@{viewModel.getCurrentPasswordTextChanged()}" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout"
                    android:textColorHint="#c5c5c5"
                    bind:textError="@{viewModel.errorNewPassword}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_new_password"
                        style="@style/TextInputLayout.TextInputEditText"
                        android:hint="@string/action_new_password"
                        android:inputType="textPassword"
                        app:addTextChangedListener="@{viewModel.getNewPasswordTextChanged()}" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout"
                    android:textColorHint="#c5c5c5"
                    bind:textError="@{viewModel.errorConfirmPassword}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_password"
                        style="@style/TextInputLayout.TextInputEditText"
                        android:hint="@string/action_confirm_password"
                        android:inputType="textPassword"
                        app:addTextChangedListener="@{viewModel.getConfirmPasswordTextChanged()}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_go"
                    style="@style/MaterialButton"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:enabled="@{viewModel.sendButtonEnabled}"
                    android:onClick="@{() -> viewModel.onSendClicked()}"
                    android:stateListAnimator="@drawable/state_list_animator_button"
                    android:text="@string/action_next"
                    app:cornerRadius="@dimen/corner_radius" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/loading_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_64sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:visibility="@{viewModel.showLoading}"
            app:layout_constraintVertical_bias="0.3"
            />
    </RelativeLayout>
</layout>