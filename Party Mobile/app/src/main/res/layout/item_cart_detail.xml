<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemViewModel"
            type="com.uit.party.ui.main.cart_detail.CartDetailItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_dish_avatar"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/corner_radius">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_dish_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dishUrl="@{itemViewModel.mAvatarDish}"
                tools:src="@drawable/dish_sample" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_dish_name"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/cv_dish_avatar"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:text="@{itemViewModel.mNameDish}"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                tools:text="Rồng xanh vượt đại dương"
                android:fontFamily="@font/museo_sans_cyrl"
                android:singleLine="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_reduction"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/ic_reduction"
                    android:tint="@color/colorBlue_78"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/et_dishes_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/btn_reduction"
                    android:background="@drawable/bg_text_box"
                    android:gravity="center"
                    android:text="@{itemViewModel.mNumberDishInType}"
                    tools:text="@string/_1"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_toStartOf="@id/btn_increase"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_increase"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/ic_increase"
                    android:tint="@color/colorBlue_78"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@id/ll_dish_name"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text="150000 Đ"
            android:text="@={itemViewModel.mDishPrice}"
            android:textSize="@dimen/_13sdp"
            android:layout_toEndOf="@id/ll_dish_name"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/museo_sans_cyrl"
            android:layout_marginEnd="@dimen/_20sdp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_delete_dish"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_delete_forever"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</layout>