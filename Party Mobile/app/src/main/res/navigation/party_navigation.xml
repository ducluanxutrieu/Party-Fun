<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/party_navigation"
    app:startDestination="@id/nav_list_dish">

    <fragment
        android:id="@+id/nav_list_dish"
        android:name="com.uit.party.ui.main.list_dish.ListDishFragment"
        android:label="@string/menu_home"
        >
        <action
            android:id="@+id/action_ListDishFragment_to_DishDetailFragment"
            app:destination="@id/nav_dish_detail"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_dish_detail"
        android:name="com.uit.party.ui.main.detail_dish.DetailDishFragment"
        android:label="@string/dish_detail"
        >
        <action
            android:id="@+id/action_back_ListDishFragment"
            app:popUpToInclusive="true"
            />

        <argument
            android:name="position"
            app:argType="integer"
            />

        <argument
            android:name="dishModel"
            app:argType="DishModel"
            />
    </fragment>
</navigation>