<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.uit.party.ui.signin.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action android:id="@+id/actionToRegisterFragment"
            app:destination="@id/registerFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.uit.party.ui.signin.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"
        >
        <action android:id="@+id/action_Back_To_Login"
            app:destination="@id/loginFragment"
            />
    </fragment>
    <activity
        android:id="@+id/signInActivity"
        android:name="com.uit.party.ui.signin.SignInActivity"
        android:label="activity_sign_in"
        tools:layout="@layout/activity_sign_in" />
</navigation>